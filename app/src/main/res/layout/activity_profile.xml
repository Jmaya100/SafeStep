<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profilePurple">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerProfile"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="@drawable/bg_header_rounded"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- AVATAR -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_avatar_circle"
        android:padding="16dp"
        android:src="@mipmap/ic_launcher_round"
        android:contentDescription="User Avatar"
        app:layout_constraintTop_toBottomOf="@id/headerProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- USERNAME -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- MANAGE INFORMATION -->
    <Button
        android:id="@+id/btnManageInformation"
        style="@style/ProfileTealButton"
        android:text="Manage Information"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MANAGE SECURITY -->
    <Button
        android:id="@+id/btnManageSecurity"
        style="@style/ProfileTealButton"
        android:text="Manage Security"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageInformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LOGOUT -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Log Out"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_primary_button"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageSecurity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTTOM NAVIGATION -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/include_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
