<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profilePurple">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerPassword"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_header_rounded"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="Manage Password"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Current Password -->
    <EditText
        android:id="@+id/etCurrent"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:hint="Current Password"
        android:background="@drawable/bg_teal_field"
        android:textColor="@android:color/black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/headerPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- New Password -->
    <EditText
        android:id="@+id/etNew"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:hint="New Password"
        android:background="@drawable/bg_teal_field"
        android:textColor="@android:color/black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/etCurrent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Confirm -->
    <EditText
        android:id="@+id/etConfirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:hint="Confirm Password"
        android:background="@drawable/bg_teal_field"
        android:textColor="@android:color/black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/etNew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Save -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="Save"
        android:textAllCaps="false"
        android:background="@drawable/bg_primary_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/etConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Back"
        android:textAllCaps="false"
        android:background="@drawable/bg_primary_button"
        android:textColor="@android:color/white"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"/>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/include_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
